<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="1dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/jie1"
            android:gravity="center"
            android:background="@drawable/text_table"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/jie2"
            android:gravity="center"
            android:background="@drawable/text_table"
            android:layout_height="0dp" />

    </LinearLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/day_1"
        android:alpha="0"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/day_2"
        android:alpha="0"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/day_3"
        android:alpha="0"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:alpha="0"
        android:id="@+id/day_4"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:alpha="0"
        android:id="@+id/day_5"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:alpha="0"
        android:id="@+id/day_6"
        android:layout_marginRight="1dp"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/day_7"
        android:alpha="0"
        android:background="@drawable/text_table"
        android:layout_height="match_parent" />

</LinearLayout>